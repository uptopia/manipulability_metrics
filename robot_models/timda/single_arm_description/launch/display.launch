<launch>
  <arg
    name="model" default="$(find single_arm_description)/urdf/single_arm.urdf.xacro" />

  <arg
    name="gui"
    default="False" />
  <param
    name="robot_description"
    command="$(find xacro)/xacro $(arg model)" />
  <param
    name="use_gui"
    value="$(arg gui)" />
  <node
    name="joint_state_publisher"
    pkg="joint_state_publisher"
    type="joint_state_publisher" />
  <node
    name="robot_state_publisher"
    pkg="robot_state_publisher"
    type="robot_state_publisher" />
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find single_arm_description)/launch/single_arm.rviz" />
</launch>