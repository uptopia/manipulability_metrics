<?xml version="1.0"?>
<launch>
  <arg name="paused" default="false"/>
  <arg name="gazebo_gui" default="true"/>
  <arg name="urdf_path" default="$(find ur_description)/urdf/ur5e_cam_robotiq.urdf.xacro"/>
  <arg name="world_name" default="worlds/empty.world"/>
  <arg name="robot_spawn_position_z_axis" default="0.01"/>

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(arg world_name)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <!-- Set the robot urdf on the parameter server -->
  <param name="robot_description" command="xacro  '$(arg urdf_path)'" />

  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -x 0 -y 0 -z $(arg robot_spawn_position_z_axis)"
    respawn="false" output="screen" />

  <!-- <node name="spawn_box1" pkg="gazebo_ros" type="spawn_model" args="-urdf -file $(find cam_ur5e_robotiq_moveit_config)/urdf/cube_red.urdf -wait robot -model cube_red_1 -x 0.6 -z 0.2" respawn="false" output="screen" /> -->

  <include file="$(find cam_ur5e_robotiq_moveit_config)/launch/ros_controllers.launch"/>

</launch>
